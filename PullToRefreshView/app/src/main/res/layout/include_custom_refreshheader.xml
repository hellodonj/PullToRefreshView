<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_refreshheader_customview_rv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:paddingTop="10dp"
    android:paddingBottom="15dp">

    <ProgressBar
        android:id="@+id/id_refreshprogress_customview_pbar"
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:indeterminate="true"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/id_refreshimage_customview_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="20dip"
        android:gravity="center"
        android:src="@drawable/ic_custom_pulltorefresharrowdown"
        android:visibility="visible" />

    <TextView
        android:id="@+id/id_refreshtext_customview_tv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/pullToRefreshPullLabel_custom_str"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/textPrimary"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/id_refreshupdatedtime_customview_tv"
        android:layout_width="fill_parent"
        android:layout_height="30dip"
        android:layout_below="@+id/id_refreshtext_customview_tv"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="更新于：07-28 15:32"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/textPrimary" />

</RelativeLayout>